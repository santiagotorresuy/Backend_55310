{{#if status}}
    <main class="main">
        <div class="list_container">
            {{#each product}}
                <div class="product_container">
                    {{!-- <p>{{this.category}}</p> --}}

                    <img class="product_container_img" src="{{this.thumbnail}}" alt="img">
                    
                    <h1 class="product_title">{{this.title}}</h1>
                    <p class="product_price">USD {{this.price}}</p>
                </div>
            {{/each}}    
        </div>
    </main>
    <div class="pagination">
        <div class="pagination_handlers">
            <button class="handle_prev">Prev</button>
            <button class="handle_next">Next</button>
        </div>
    </div>
{{/if}}
 
<script src="/socket.io/socket.io.js"></script>